<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Category</title>
  <style>
    #categoryForm {
      display: none; 
    }
  </style>
</head>
<body>
  <h2>Categories</h2>
  <ul>
    <% categories.forEach(category => { %>
      <li><a href=""><%= category.name %></a></li>
    <% }); %>
  </ul>









  <button id="toggleCategoryFormButton">+</button> 
  <form id="categoryForm" action="/add-categories" method="post" onsubmit="return validateForm()">
    <label for="name">Enter a category</label>
    <input type="text" name="name" id="name" required>
    <button type="submit">Add</button>
  </form>

  <script>
   
    const toggleCategoryFormButton = document.getElementById("toggleCategoryFormButton"); 
    const categoryForm = document.getElementById("categoryForm");

    toggleCategoryFormButton.addEventListener("click", function () {
      if (categoryForm.style.display === "none" || categoryForm.style.display === "") {
        categoryForm.style.display = "block";
      } else {
        categoryForm.style.display = "none";
      }
    });

    function validateForm() {
      const name = document.getElementById('name').value.trim();
      if (!name) {
        alert('Category name cannot be empty');
        return false;
      }
      return true;
    }
  </script>
</body>
</html>